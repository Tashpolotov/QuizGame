<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboard.fragment.OnBoardFragment6">


    <ImageView
        android:id="@+id/img_enemy9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="190dp"/>


    <ImageView
        android:id="@+id/img_enemy8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:id="@+id/img_enemy6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:id="@+id/img_enemy7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:id="@+id/img_enemy5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="120dp"/>


    <ImageView
        android:id="@+id/img_enemy3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enemy3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="190dp"/>


    <ImageView
        android:id="@+id/img_enemy4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/enemy4"
        app:layout_goneMarginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_zeus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_zeus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="120dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg3"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/img_196"
            app:layout_constraintEnd_toEndOf="@id/img_199"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:text="@string/and_thus_the_gauntlet_was_thrown_each_god_prepared_a_series_of_challenges_quizzes_that_would_delve_deep_into_the_core_of_greek_mythology_these_were_not_mere_tests_but_reflections_of_their_domains_their_stories_and_their_influence_on_the_tapestry_of_myths"


            />



        <ImageView
            android:id="@+id/img_196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_196"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ImageView
            android:id="@+id/img_197"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_197"
            app:layout_constraintBottom_toTopOf="@id/img_196"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/img_rest60"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/rectangle_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="7dp"
            />

        <ImageView
            android:id="@+id/img_rest61"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_61"
            app:layout_constraintTop_toTopOf="@id/img_197"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="52dp"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            android:id="@+id/img_199"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:src="@drawable/group_199"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />


        <ImageView
            android:id="@+id/img_rest62"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_61"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="52dp"
            app:layout_constraintEnd_toEndOf="parent"


            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/btn_back"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/img_next"

            />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_back"
            android:src="@drawable/btn_next"
            android:scaleType="centerCrop"
            android:layout_marginStart="80dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>