<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboard.fragment.OnBoardFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/img_196"
            app:layout_constraintEnd_toEndOf="@id/img_199"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:text="@string/in_a_realm_beyond_the_grasp_of_mortals_where_the_eternal_dances_of_the_cosmos_swirled_lay_the_magnificent_mount_olympus_it_wasn_t_just_a_mountain_but_the_beating_heart_of_legends_myths_and_the_very_fabric_of_existence_here_the_gods_powerful_and_timeless_governed_the_fates_of_men_and_molded_the_universe_to_their_whims"
            android:layout_marginTop="26dp"/>



        <ImageView
            android:id="@+id/img_196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_196"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ImageView
            android:id="@+id/img_197"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_197"
            app:layout_constraintBottom_toTopOf="@id/img_196"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/img_rest60"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/rectangle_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="7dp"
            />

        <ImageView
            android:id="@+id/img_rest61"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_61"
            app:layout_constraintTop_toTopOf="@id/img_197"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="52dp"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            android:id="@+id/img_199"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:src="@drawable/group_199"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />


        <ImageView
            android:id="@+id/img_rest62"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_61"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="52dp"
            app:layout_constraintEnd_toEndOf="parent"


            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/btn_back"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/img_next"

            />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_back"
            android:src="@drawable/btn_next"
            android:scaleType="centerCrop"
            android:layout_marginStart="80dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>